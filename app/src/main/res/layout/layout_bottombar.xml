<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


        <ru.skillbranch.skillarticles.ui.custom.CheckableImageView
            android:id="@+id/bt_like"
            style="@style/BottomBarIcon"
            android:src="@drawable/like_states"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_bookmark"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ru.skillbranch.skillarticles.ui.custom.CheckableImageView
            android:id="@+id/bt_bookmark"
            style="@style/BottomBarIcon"
            android:src="@drawable/bookmark_states"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_share"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_like"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bt_share"
            style="@style/BottomBarIcon"
            android:src="@drawable/ic_share_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_bookmark"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"/>

        <ru.skillbranch.skillarticles.ui.custom.CheckableImageView
            android:id="@+id/btn_settings"
            style="@style/BottomBarIcon"
            android:src="@drawable/ic_format_size_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</merge>